{
  "name": "acquia/acquia-ra-composer",
  "description": "Project json for Acquia Remote Administration Composer builds",
  "type": "project",
  "license": "proprietary",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "require": {
    "composer/installers": "^1.0",
    "cweagans/composer-patches": "^1.6.0",
    "drupal-composer/drupal-scaffold": "^2.0.0",
    "drupal/admin_toolbar": "^1.0",
    "drupal/core": "^8.6",
    "drush/drush": "^8.1",
    "drupal/bootstrap_barrio": "^4.14",
    "drupal/bootstrap_sass": "^1.5",
    "drupal/paragraphs": "^1.3",
    "drupal/search_api": "^1.9",
    "drupal/pathauto": "^1.2",
    "drupal/entity": "^1.0",
    "drupal/addtoany": "^1.10",
    "drupal/forms_steps": "^1.0@RC",
    "drupal/ds": "^3.1",
    "drupal/geofield_map": "^2.13",
    "drupal/back_to_top": "^1.0",
    "drupal/address": "~1.0",
    "drupal/contact_block": "^1.4",
    "drupal/shrinktheweb": "^1.1",
    "drupal/entity_usage": "^2.0@alpha",
    "drupal/pdfpreview": "^1.0@RC",
    "drupal/colorbox": "^1.4",
    "drupal/social_api": "^2.0",
    "drupal/social_auth_twitter": "^2.0",
    "drupal/social_auth_facebook": "~2.0",
    "drupal/social_auth_google": "^2.0",
    "drupal/social_auth": "^2.0",
    "drupal/acquia_connector": "^1.14",
    "drupal/facets": "^1.1",
    "drupal/video_embed_field": "^2.0",
    "drupal/search_api_solr": "^1.2",
    "drupal/field_group": "^3.0",
    "drupal/field_group_ajaxified_multipage": "^1.0",
    "drupal/shs": "^1.0@alpha",
    "drupal/conditional_fields": "^1.0@alpha",
    "drupal/chosen": "^2.6",
    "drupal/synonyms": "1.x-dev",
    "drupal/better_field_descriptions": "^1.4",
    "drupal/menu_link_attributes": "^1.0",
    "drupal/leaflet": "^1.0@beta",
    "drupal/geocoder": "^2.0@beta",
    "drupal/leaflet_more_maps": "^1.0@alpha",
    "drupal/better_exposed_filters": "^3.0@alpha",
    "drupal/taxonomy_publish": "^1.1",
    "drupal/content_moderation_notifications": "^3.0@RC",
    "drupal/taxonomy_access_fix": "^2.6",
    "drupal/inline_entity_form": "^1.0@RC",
    "drupal/form_mode_manager": "^1.3"
  },
  "require-dev": {
    "drupal/devel": "^1.0",
    "drupal/stage_file_proxy": "^1.0"
  },
  "conflict": {
    "drupal/core": "7.*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "docroot/core": ["type:drupal-core"],
      "docroot/libraries/{$name}": ["type:drupal-library"],
      "docroot/modules/contrib/{$name}": ["type:drupal-module"],
      "docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
      "docroot/themes/contrib/{$name}": ["type:drupal-theme"]
    },
    "patches": {
      "drupal/address": {
        "Integrate Address with Search API": "https://www.drupal.org/files/issues/2018-06-07/address-search-api-full-name-properties-2812659-37.patch"
      }
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@composer drupal-scaffold"
    ],
    "post-update-cmd": [
      "@composer drupal-scaffold"
    ],
    "drupal-scaffold": [
      "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
    ]
  },
  "enable-patching": true
}
